{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BunchaTools",
  "version": "0.1.0",
  "identifier": "com.bunchatools.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BunchaTools",
        "label": "main",
        "width": 600,
        "height": 60,
        "minWidth": 600,
        "maxWidth": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "id": "main-tray"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
